@page
@model EF.Web.Pages.Users.Add
@{
    ViewData["Title"] = "Новый пользователь";
    var message = ViewData["Message"]?.ToString();
}

<form method="post">
    <h1 class="mb-3">@ViewData["Title"]</h1>

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }
    
    <div class="mb-3">
        <label class="form-label">Имя</label>
        <input class="form-control" type="text" asp-for="AddUserRequest.FirstName"/>
    </div>

    <div class="mb-3">
        <label class="form-label">Email address</label>
        <input class="form-control" type="email" asp-for="AddUserRequest.Email"/>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>