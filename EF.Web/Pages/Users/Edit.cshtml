@page "{id:int}"
@model EF.Web.Pages.Users.Edit
@{
    ViewData["Title"] = "Редакирование пользователя";
    var Message = ViewData["Message"]?.ToString();
}

<form method="post">
<h1 class="mb-3">@ViewData["Title"]</h1>

@if (!string.IsNullOrWhiteSpace(Message))
{
    <div class="alert alert-success" role="alert">
        @Message
    </div>
}
<div class="mb-3">
    <label class="form-label">Id</label>
    <input class="form-control" type="text" asp-for="EditUserViewModel.Id" readonly/>
</div>
<div class="mb-3">
    <label class="form-label">Имя</label>
    <input class="form-control" type="text" asp-for="EditUserViewModel.FirstName"/>
</div>
<div class="mb-3">
    <button type="submit" class="btn btn-primary">
        Сохранить
    </button>
</div>
</form>